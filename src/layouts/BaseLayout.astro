---
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";
---

<html lang="en">
  <head>
    <!-- Google Analytics -->
    <script
      async
      src="https://www.googletagmanager.com/gtag/js?id=G-C36M60N8VP"
    ></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());
      gtag("config", "G-C36M60N8VP");
    </script>

    <!-- Primary Meta Tags -->
    <title>Lance Flores | Web Designer and Web Developer Manila, Philippines</title>
    <meta
      name="description"
      content="Lance Flores is a professional freelance web designer and web developer offering custom web solutions tailored to your business needs."
    />
    <meta
      name="keywords"
      content="web designer, web developer, custom web design, responsive websites, SEO services, website development, website design, website design services, website development services"
    />
    <meta
      name="author"
      content="Lance Flores"
    />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0"
    />
    <meta charset="UTF-8" />

    <!-- Open Graph Meta Tags -->
    <meta
      property="og:type"
      content="website"
    />
    <meta
      property="og:title"
      content="Web Designer and Web Developer Manila, Philippines | Lance Flores"
    />
    <meta
      property="og:description"
      content="Custom web design and development services by Lance Flores, specializing in modern, responsive, and user-friendly websites."
    />
    <meta
      property="og:url"
      content="https://lanceflores.netlify.app"
    />
    <meta
      property="og:image"
      content="/social-image.png"
    />
    <meta
      property="og:site_name"
      content="Lance Flores - Web Designer and Developer"
    />

    <!-- Additional Meta Tags -->
    <link
      rel="canonical"
      href="https://lanceflores.netlify.app"
    />
    <meta
      name="robots"
      content="index, follow"
    />
    <meta
      name="rating"
      content="general"
    />
    <meta
      name="google-site-verification"
      content="2XktRvq446Q8tfXjo5MDnNojjv439NnSaZX42W9AoF8"
    />

    <!-- Schema.org for Google -->
    <meta
      itemprop="name"
      content="Web Designer and Web Developer Manila, Philippines | Lance Flores"
    />
    <meta
      itemprop="description"
      content="Lance Flores provides professional freelance web design and development services for businesses looking to establish a strong online presence."
    />
    <meta
      itemprop="image"
      content="/social-image.png"
    />

    <!-- Favicon and Manifest -->
    <link
      rel="icon"
      href="/favicon.ico"
    />
    <link
      rel="apple-touch-icon"
      href="/apple-touch-icon.png"
    />
    <link
      rel="manifest"
      href="/site.webmanifest"
    />

    <!-- Preload Critical Resources -->
    <link
      rel="preload"
      href="/path-to-critical-font.woff2"
      as="font"
      type="font/woff2"
      crossorigin="anonymous"
    />
    <link
      rel="preload"
      href="/critical-styles.css"
      as="style"
    />

    <link rel="stylesheet" rel="preload" href="https://fonts.googleapis.com/icon?family=Material+Icons">
  </head>
  
  <body
    class="container mx-auto max-w-screen-2xl bg-background text-text text-base antialiased overflow-x-hidden"
  >
    <!-- Google Tag Manager (noscript) -->
    <noscript>
      <iframe
        src="https://www.googletagmanager.com/ns.html?id=GTM-P4CG8F4X"
        height="0"
        width="0"
        style="display:none;visibility:hidden"
      ></iframe>
    </noscript>

    <!-- Navbar, Slot, Footer -->
    <Navbar />
    <div class="grainy">
      <slot />
    </div>
    <Footer />
  </body>
</html>

