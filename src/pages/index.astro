---
import BaseLayout from "../layouts/BaseLayout.astro";
import Hero from "../sections/Hero.astro";
import Testimonial from "../sections/Testimonial.astro";
import CTA from "../sections/CTA.astro";
import Works from "../sections/Works.astro";
import Process from "../sections/Process.astro";
import FAQ from "../sections/FAQ.astro";
import Services from "../sections/Services.astro";
import About from "../sections/About.astro";
---

<BaseLayout>
  <main class="relative scroll-smooth space-y-section-lg">
    <Hero />
    <Works />

    <!-- Foreground content with solid backgrounds and spacing -->
    <div class="relative bg-zinc-950 text-zinc-100 space-y-section-xl rounded-t-lg">
      <Services />
      <About />
      <Process />
    </div>

    <FAQ />
    <Testimonial />
    <CTA />
  </main>
</BaseLayout>
