---
import Button from "../components/Button.astro";
---
<!-- Contact Section -->
<section
  id="contact"
  class="flex flex-col justify-center items-center text-center border-2 rounded-lg p-16"
>
  <span class="badge mb-4 text-xs w-max"
    >Ready to elevate your online presence?</span
  >
  <h3 class="text-3xl md:text-7xl mb-6 max-w-2xl">
    LET'S MAKE IT HAPPEN 
  </h3>
    <Button
        style="bg-text text-white px-4 py-2 md:px-6 md:py-3 sm:px-4 sm:py-2 rounded-full hover:shadow-sm transition-transform hover:scale-105 duration-300 delay-50"
        label="Book a call"
        data-cal-link="mediocrest/15min"
        data-cal-namespace="15min"
        data-cal-config='{"layout":"month_view"}'
      />
</section>
<!-- Contact Section End -->