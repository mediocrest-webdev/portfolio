---
import { Image } from "astro:assets";

// Image imports
import Project1 from "../images/project-1.webp";
import Project2 from "../images/project-2.webp";

const ProjectList = [
  {
    year: "2024",
    title: "GreenThumb Landscaping",
    description:
      "Designed and built a clean, professional site for a landscaping business, showcasing their services and projects with a user-friendly, SEO-ready design.",
    category: "Design",
    category2: "Development",
    link: "https://greenthumblandscapes.netlify.app/",
    image: Project1,
    alt: "Web design and development for GreenThumb Landscaping, service showcases with an engaging user experience.",
  },
  {
    year: "2024",
    title: "Serenity Spa",
    description:
      "Created an elegant website for a spa business, highlighting their services and giving clients a smooth, relaxing online experience.",
    category: "Design",
    category2: "Development",
    link: "https://serenityspaservices.netlify.app/",
    image: Project2,
    alt: "Web design for Serenity Spa, showcasing services with a seamless online experience for clients.",
  },
  
];
---

<section id="works">
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 px-6 md:px-0">
    {ProjectList.map((project, index) => (
      <div
        class="group flex flex-col overflow-hidden focus:outline-none border rounded-xl"
        key={index}
      >
        <!-- Image -->
        <div class=" overflow-hidden">
          <Image
            src={project.image}
            alt={project.alt}
            width="1920"
            height="1440"
            class="rounded-xl inset-0 object-cover transition-transform duration-500 ease-in-out group-hover:scale-105 group-focus:scale-105 "
            loading="lazy"
            decoding="async"
          />
        </div>

        <!-- Text Content -->
        <div class="p-6 flex flex-col flex-1 justify-between space-y-8">
          <div class="space-y-3">
            <h3 class="text-xl text-text font-medium leading-snug">
              {project.title}
            </h3>

            <p class="text-muted text-base leading-relaxed line-clamp-3">
              {project.description}
            </p>

            <div class="flex flex-wrap gap-2 pt-1">
              <span class="py-1 px-2 bg-gray-200 text-gray-600 text-xs font-medium rounded">
                {project.year}
              </span>
              <span class="py-1 px-2 bg-gray-200 text-gray-600 text-xs font-medium rounded">
                {project.category}
              </span>
              <span class="py-1 px-2 bg-gray-200 text-gray-600 text-xs font-medium rounded">
                {project.category2}
              </span>
            </div>
          </div>

          <!-- View Project Button -->
          <a
            href={project.link}
            target="_blank"
            rel="noopener noreferrer"
            class="mt-4 inline-flex items-center gap-2 w-max text-center px-6 py-3 md:px-8 md:py-4 rounded-lg bg-text font-medium text-zinc-100 transition-transform hover:scale-105 duration-300"
          >
            View project
             <svg
      class="shrink-0 w-4 h-4 group-hover:translate-x-1 transition"
      xmlns="http://www.w3.org/2000/svg"
      fill="none"
      viewBox="0 0 24 24"
      stroke="currentColor"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
    </svg>
          </a>
        </div>
      </div>
    ))}
  </div>
</section>



