---
import { Image } from "astro:assets";

// Image imports
import Project1 from "../images/project-1.webp";
import Project2 from "../images/project-2.webp";

const ProjectList = [
  {
    year: "2024",
    title: "GreenThumb Landscaping Website",
    description:
      "Designed and built a clean, professional site for a landscaping business, showcasing their services and projects with a user-friendly, SEO-ready design.",
    category: "Design",
    category2: "Development",
    link: "https://greenthumblandscapes.netlify.app/",
    image: Project1,
    alt: "Web design and development for GreenThumb Landscaping, service showcases with an engaging user experience.",
  },
  {
    year: "2024",
    title: "Serenity Spa Website",
    description:
      "Created an elegant website for a spa business, highlighting their services and giving clients a smooth, relaxing online experience.",
    category: "Design",
    category2: "Development",
    link: "https://serenityspaservices.netlify.app/",
    image: Project2,
    alt: "Web design for Serenity Spa, showcasing services with a seamless online experience for clients.",
  },
];
---

<section id="works" class="space-y-8">
  {
    ProjectList.map((project, index) => (
      <div
        class={`grid grid-cols-1 lg:grid-cols-12 gap-6 items-center border-2 rounded-lg p-4 bg-background lg:sticky top-20`}
        key={index}
      >
        {/* Conditional order based on index */}
        {index % 2 === 0 ? (
          <>
            <div class="lg:col-span-4 p-4 order-2">
              <div class="space-y-4">
                <h2 class="text-xl md:text-2xl leading-none">
                  {project.title}
                </h2>
                <p class="text-muted text-sm sm:text-base">
                  {project.description}
                </p>
                <div class="flex gap-1">
                  <span class="badge text-muted">{project.year}</span>
                  <span class="badge text-muted">{project.category}</span>
                  <span class="badge text-muted">{project.category2}</span>
                </div>
              </div>
              <a
                href={project.link}
                target="_blank"
                type="button"
                role="button"
                class="block w-max mt-8 bg-text text-white px-6 py-3 rounded-full transition-transform ease-in-out hover:scale-105 duration-300 delay-50"
                rel="noopener noreferrer"
              >
                View project
              </a>
            </div>
            <div class="lg:col-span-8 order-1 lg:order-2">
              <Image
                src={project.image}
                alt={project.alt}
                width="1920"
                height="1440"
                class="size-full sm:w-full sm:h-auto xl:h-[32rem] rounded-lg object-cover"
              />
            </div>
          </>
        ) : (
          <>
            <div class="lg:col-span-8">
              <Image
                src={project.image}
                alt={project.alt}
                width="1920"
                height="1440"
                class="size-full sm:w-full sm:h-auto xl:h-[32rem] rounded-lg object-cover"
              />
            </div>

            <div class="lg:col-span-4 p-4">
              <div class="space-y-4">
                <h2 class="text-xl md:text-2xl leading-none">
                  {project.title}
                </h2>
                <p class="text-muted text-sm sm:text-base">
                  {project.description}
                </p>
                <div class="flex gap-1">
                  <span class="badge text-muted">{project.year}</span>
                  <span class="badge text-muted">{project.category}</span>
                  <span class="badge text-muted">{project.category2}</span>
                </div>
              </div>
              <a
                href={project.link}
                target="_blank"
                type="button"
                role="button"
                class="block w-max mt-8 bg-text text-white px-6 py-3 rounded-full transition-transform ease-in-out hover:scale-105 duration-300 delay-50"
                rel="noopener noreferrer"
              >
                View project
              </a>
            </div>
          </>
        )}
      </div>
    ))
  }
</section>
