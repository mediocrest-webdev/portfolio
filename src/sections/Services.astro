<!-- Services Section -->
<section id="services" class="flex flex-col my-section-lg md:my-section-xl lg:my-section-xxl">
  <!-- Header -->
  <h2 class="self-center mb-8 md:mb-12 text-xl md:text-2xl text-center leading-none max-w-[20ch]">
    Tailored solutions for your specific needs
  </h2>

  <div class="max-w-5xl mx-auto grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 relative">

    <!-- Services Card 1 -->
    <div class="border shadow-sm rounded-lg bg-background p-4 sticky top-20 sm:static">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
