---
// data/testimonials.js or directly in component
const testimonials = [
  {
    quote:
      "Lance made the entire process simple and smooth. He took our ideas, added his creative input, and built a site that actually converts.",
    name: "Maria Torres",
    role: "Founder, GreenThumb",
  },
  {
    quote:
      "From day one, Lance was easy to work with. Clear communication, fast turnaround, and a website that speaks for itself.",
    name: "Jeff Santiago",
    role: "Operations Head",
  },
  {
    quote:
      "I’ve worked with other web designers before, but Lance stands out. He understood our goals, knew our audience, and delivered a fast, focused website.",
    name: "Dianne Cruz",
    role: "Brand Consultant",
  },
];
---

<section id="testimonials" class="px-6">
  <div
    class="mb-8 flex flex-col items-center text-center mx-auto"
  >
    <h2 class="text-2xl md:text-3xl font-semibold max-w-lg">
    Trusted by clients who value clarity and results
  </div>

  <div class="grid gap-4 md:grid-cols-2 lg:grid-cols-3">
    {
      testimonials.map((t, index) => (
        <div
          key={index}
          class="rounded-xl border p-6 flex flex-col h-full shadow-sm"
        >
          <p class="text-lg text-foreground/80">“{t.quote}”</p>
          <div class="mt-auto pt-12">
            <p class="font-medium">{t.name}</p>
            <p class="text-muted text-sm">{t.role}</p>
          </div>
        </div>
      ))
    }
  </div>
</section>
