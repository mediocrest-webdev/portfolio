---
const { year, title, description, category, link } = Astro.props;
---
<div class="flex flex-col order-2 p-6 bg-gray-100 rounded-lg md:p-8 lg:order-1">
  <header class="mb-12">
    <div class="inline-flex items-center gap-4 mb-6">
      <span class="text-xs sm:text-sm text-contrast">{year}</span>
      <span class="text-xs sm:text-sm text-contrast span-border">{category}</span>
    </div>
    <h3
      id="project-1-title"
      class="mb-4 text-lg md:text-xl leading-none"
    >
      {title}
    </h3>
    <p class="text-sm sm:text-base ">
      {description}
    </p>
  </header>
  <footer class="mb-4">
    <a href={link} target="_blank" class="text-sm sm:text-base bg-text text-white px-6 py-3 rounded-full hover:shadow-sm transition-transform hover:scale-105 duration-300 delay-50 cursor-pointer w-fit">View project</a>
  </footer>
</div>
