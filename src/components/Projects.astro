---
const { year, title, description, category, link } = Astro.props;
---
<div class="flex flex-col order-2 p-6 bg-gray-100 rounded-lg md:p-8 lg:order-1">
  <header class="mb-8">
    <span class="mb-6 text-sm">{year}</span>
    <h3
      id="project-1-title"
      class="mb-4 text-lg md:text-xl leading-none"
    >
      {title}
    </h3>
    <p class="text-sm sm:text-base text-contrast">
      {description}
    </p>
  </header>
  <footer class="flex flex-col sm:flex-row sm:items-center  gap-x-4 mt-auto">
    <span class="text-sm span-border cursor-default mb-3 sm:mb-0">{category}</span>
    <a href={link} target="_blank" class="text-sm bg-text text-white px-4 py-2 rounded-full hover:shadow-sm transition-transform hover:scale-105 duration-300 delay-50 cursor-pointer w-fit">View project</a>
  </footer>
</div>
