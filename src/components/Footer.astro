<script>
  // Local Manila time updater
  function updateManilaTime() {
    const now = new Date();
    const options = {
      timeZone: "Asia/Manila",
      hour: "2-digit",
      minute: "2-digit",
      second: "2-digit",
      hour12: true,
    };
    document.getElementById("local-time-manila").textContent =
      now.toLocaleTimeString("en-US", options) + " MNL, PH";
  }

  updateManilaTime();
  setInterval(updateManilaTime, 1000);
</script>
